<div class="container">
  <h1><%= @restaurant.name %></h1>
  <h5>Address: <%= @restaurant.address %></h5>
  <h5>Category: <%= @restaurant.category %></h5>
  <p><%= Faker::Restaurant.description %></p>

  <div>
    <h3>Reviews</h3>
    <!-- Need to add all the reviews here -->
    <% @restaurant.reviews.each do |review| %>
      <p>Rating: <%= review.rating %></p>
      <p>Comment: <%= review.content %></p>
    <% end %>
  </div>

  <div class="d-flex">
    <%= link_to 'Back to restaurants', restaurants_path, class: 'btn btn-secondary me-3'  %>
    <%= link_to 'Add a review', new_restaurant_review_path(@restaurant), class: 'btn btn-secondary'  %>
  </div>
</div>
